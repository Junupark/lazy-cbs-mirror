{
  "name": "lazy-cbs-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postCreateCommand": "git submodule update --init --recursive",
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.generator": "Unix Makefiles"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ]
    }
  }
}
